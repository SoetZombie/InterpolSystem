@model InterpolSystem.Web.Areas.BountyAdmin.Models.WantedPeople.SubmitFormWantedViewModel

@{
    ViewData["Title"] = "Submitted Forms";
}

<h2>ListAllForms</h2>

<table class="table">
    <thead>
        <tr>
                <th>
                    Message
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Image)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PoliceDepartment)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Date)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.SubmitForms) {
        <tr>
            
            <td>
                <b>@Html.DisplayFor(modelItem => item.Subject)</b><br>
                @Html.DisplayFor(modelItem => item.Message)
            </td>
            <td>
                <!--https://stackoverflow.com/questions/17952514/mvc-how-to-display-a-byte-array-image-from-model*-->
                @{ var base64 = Convert.ToBase64String(item.PersonImage);}
                @{ var imgSrc = String.Format("data:image/gif;base64,{0}", base64); }
                <img style="height:200px; width:auto"src="@imgSrc" />
                
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PoliceDepartment)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SenderEmail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SubmissionDate)
            </td>
            <td>
                <a asp-area="" style="margin-bottom:4px" asp-controller="WantedPeople" asp-action="Details" asp-route-id="@item.IdentityParticularsWantedId" class="btn btn-primary">See criminal details</a>
                <form asp-controller="WantedPeople" method="post">
                   
                        <input type="hidden" name="id" value="@item.Id" />
                        <input asp-action="DeclineForm" class="btn  btn-danger" type="submit" value="Reject" onclick="return confirm('Are you sure you want to reject this form?')" />
                        <input asp-action="AcceptForm" style="float:right "class="btn  btn-success" type="submit" value="Accept" onclick="return confirm('Are you sure you want to accept this form?')" />
                   
                </form>

            </td>
        </tr>
}
    </tbody>
</table>
